<div class="modal fade" id="changePasswordModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thay đổi mật khẩu</h4>
            </div>
            <div class="modal-body">
                <form action="/changepassword" method="POST" role="form" id="changePasswordForm">
                    <div class="card">
                        <div class="card-header">
                            <% if(errorChangepassword) { %>
                                <div class="alert alert-danger">
                                    <p><%= errorChangepassword %></p>
                                </div>
                            <% } %>
                        </div>
                        <div class="card-block">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mật khẩu cũ<i style = color:red>*</i></label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="curent_password" name="curent_password" value="" placeholder="Nhập mật khẩu cũ" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mật khẩu mới<i style = color:red>*</i></label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="new_password" name="new_password" value="" placeholder="Nhập mật khẩu mới" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Nhập lại mật khẩu<i style = color:red>*</i></label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="comfirm_password" name="comfirm_password" value="" placeholder="Nhập lại mật khẩu mới" required>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-sm-2"></label>
                                <div class="col-sm-10">
                                    <button id="edit_submit_btn" type="button" onclick="return validateFormChangePassword(event)" class="btn btn-primary m-b-0">Thay đổi</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>